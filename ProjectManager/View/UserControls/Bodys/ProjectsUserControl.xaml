<UserControl x:Class="PMView.View.ProjectsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMView.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Column="0">
            <DataGrid Grid.Row="0" Name="ProjectsDataGrid" ColumnWidth="*" SelectedCellsChanged="ProjectsDataGrid_SelectedCellsChanged" IsReadOnly="True" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Header">
                       
                     

                    </DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>

        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.Column="0" x:Name="ProjectDetailsGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>



            <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label Content="{Binding Path=Name}" TextBlock.FontSize="20" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Label Content="{Binding Path=ProjectStatus}" TextBlock.FontSize="18" FontWeight="Bold"  HorizontalAlignment="Right" Margin="0,0,15,0"/>
                </Grid>
            </Grid>



            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                    <Label Content="Description:" Margin="15,0,0,0" TextBlock.FontSize="18"/>
                </Grid>

                <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                    <TextBox MaxLines="5" TextWrapping="Wrap" IsReadOnly="True" Margin="18,0,18,0" Text="{Binding Path=Description, Mode=OneWay}" VerticalScrollBarVisibility="Auto" TextBlock.FontSize="16">
                        <TextBox.Background>
                            <SolidColorBrush Color="White" Opacity="0.2"/>
                        </TextBox.Background>
                    </TextBox>
                </Grid>
                <!--           last row                     -->
                <Grid Grid.Row="2" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- FIRST -->
                    <Grid Grid.Column="0" VerticalAlignment="Stretch">
                        <Grid VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Label Content="Skills:" Margin="15,0,0,0" FontSize="14"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBox MaxLines="5" TextWrapping="Wrap" Text="{Binding Path=Skills, Mode=OneWay}" IsReadOnly="True" Margin="0,4,0,0" FontSize="14">
                                        <TextBox.BorderBrush>
                                            <DrawingBrush Opacity="0"></DrawingBrush>
                                        </TextBox.BorderBrush>
                                        <TextBox.Background>
                                            <SolidColorBrush Color="White" Opacity="0"/>
                                        </TextBox.Background>
                                    </TextBox>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Label Content="Teams:" Margin="15,0,0,0" FontSize="14"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBox MaxLines="5" TextWrapping="Wrap" Text="{Binding Path=Teams, Mode=OneWay}" IsReadOnly="True" Margin="0,4,0,0" FontSize="14">
                                        <TextBox.BorderBrush>
                                            <DrawingBrush Opacity="0"></DrawingBrush>
                                        </TextBox.BorderBrush>
                                        <TextBox.Background>
                                            <SolidColorBrush Color="White" Opacity="0"/>
                                        </TextBox.Background>
                                    </TextBox>
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Label Content="Employees:" Margin="15,0,0,0" FontSize="14"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBox MaxLines="5" TextWrapping="Wrap" Text="{Binding Path=Employees, Mode=OneWay}" IsReadOnly="True" Margin="0,4,0,0" FontSize="14">
                                        <TextBox.BorderBrush>
                                            <DrawingBrush Opacity="0"></DrawingBrush>
                                        </TextBox.BorderBrush>
                                        <TextBox.Background>
                                            <SolidColorBrush Color="White" Opacity="0"/>
                                        </TextBox.Background>
                                    </TextBox>
                                </Grid>

                            </Grid>
                            <Grid Grid.Row="3" HorizontalAlignment="Stretch">
                                <Button Content="Technical Task" Margin="20,0,0,0" HorizontalAlignment="Stretch">
                                    <Button.Background>
                                        <SolidColorBrush Color="SkyBlue"></SolidColorBrush>
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!-- Second -->
                    <Grid Grid.Column="1">
                        <Grid Grid.Column="2" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Image Name="ProfileImage" Source="/Assets/MaleAvatar.jpg" Width="100" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="20,5,20,20"/>
                            </Grid>
                            <Grid Grid.Row="1"/>
                            <Grid Grid.Row="2"/>
                            <Grid Grid.Row="3"/>
                        </Grid>
                    </Grid>
                    <!-- Third -->
                    <Grid Grid.Column="2">
                        <Border Name="TaskButton" VerticalAlignment="Stretch" Margin="0,5,18,0" Opacity="0.8" HorizontalAlignment="Stretch" MouseDown="TaskButton_Click" MouseEnter="TaskButton_MouseEnter" MouseLeave="TaskButton_MouseLeave">
                            <Grid>
                                <Grid.Background>
                                    <SolidColorBrush Color="White" Opacity="0.3"></SolidColorBrush>
                                </Grid.Background>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Path=CustomerName, Mode=OneWay}" FontSize="14" Background="Transparent"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <TextBlock TextWrapping="Wrap"  Text="{Binding Path=StartDate, Mode=OneWay}" FontSize="14" Background="Transparent"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <TextBlock TextWrapping="Wrap"  Text="{Binding Path=ReleaseDate, Mode=OneWay}" FontSize="14"  Background="Transparent"></TextBlock>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <TextBlock TextWrapping="Wrap"  Text="{Binding Path=Price, Mode=OneWay}" FontSize="14" Background="Transparent"></TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>
